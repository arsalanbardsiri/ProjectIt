<h1>{{room.name}}</h1>
<p>Description: {{room.description}}</p>
<p>Created by: {{room.user.username}}</p>

<!-- Chat functionality -->
<div class="chat-section">
    <h2>Chatroom</h2>
    <div id="messages" class="chat-window">
        <!-- Chat messages will be dynamically populated here -->
    </div>
    
    <div class="message-input">
        <textarea id="messageInput" rows="3" placeholder="Type your message..."></textarea>
        <button id="sendMessage" class="send-button">Send</button>
    </div>
</div>

<script>
    document.getElementById('messageInput').addEventListener('keypress', function(event) {
        if (event.keyCode == 13 && !event.shiftKey) {  // 13 is the keycode for the Enter key
            event.preventDefault();  // Prevents default action (new line)
            document.getElementById('sendMessage').click();  // Triggers the Send button's click event
        }
    });
</script>
